
<div class="container-fluid">
  <h1>Usuario Details</h1>
  <%= form_with(model: @usuario, local: true) do |form| %>
                  <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :password %>
          <%= form.text_field :password, class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :cpf %>
          <%= form.text_field :cpf, class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :dataNascimento %>
          <%= form.date_select :dataNascimento, class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :cep %>
          <%= form.text_field :cep, class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :telefone %>
          <%= form.text_field :telefone, class:"form-control", readonly:true%>
        </div>
            <% end %>
  <%= link_to 'Editar', edit_usuario_path(@usuario),class:"btn btn-primary min-width-btn" %> 
  <%= link_to 'Voltar', usuarios_path,class:"btn btn-light min-width-btn" %>
</div>

