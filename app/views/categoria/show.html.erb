<%= render '/layouts/info' %>
<%= render '/layouts/header' %>
<div class="container">
  <h1>Categoria</h1>
  <%= form_with(model: @categoria, local: true) do |form| %>
                  <div class="form-group">
          Descrição
          <%= form.text_field :descricao, class:"form-control", readonly:true%>
        </div>
                        <div class="form-group form-check">
          <%= form.check_box :ativo, class:"form-check-input", disabled:true%>
          <%= form.label :ativo, class:"form-check-label"%>
        </div>
            <% end %>
  <%= link_to 'Editar', edit_categorium_path(@categoria),class:"btn btn-primary min-width-btn" %> 
  <%= link_to 'Voltar', categoria_path,class:"btn btn-light min-width-btn" %>
</div>


<%= render '/layouts/footer' %>