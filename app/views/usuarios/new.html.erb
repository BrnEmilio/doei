<%= render '/layouts/info' %>
<body>
    <%= render '/layouts/header' %>
    <div class="container-fluid col-9 mt-4">
        <h2>Novo Usuário</h2>
        <%= form_with(model: @usuario, local: true) do |form| %>
            <% if @usuario.errors.any? %>
              <div id="error_explanation" class="alert alert-danger" role="alert">
                <h5><%= pluralize(@usuario.errors.count, "erro") %> impedem esse usuário de ser salvo:</h5>
                <ul>
                <% @usuario.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group col-10">
              <%= form.label :nome %>
              <%= form.text_field :nome  ,class:"form-control" %>
            </div>
            <div class="form-group col-10">
              <%= form.label :email %>
              <%= form.text_field :email  ,class:"form-control", id:"cadastrar_form_email"%>
            </div>
            <div class="form-group col-6">
              <%= form.label :Senha %>
              <%= form.password_field :password, class:"form-control", id:"cadastrar_form_senha" %>
            </div>
            <div class="form-group col-6">
              <%= form.label :Redigite_Senha %>
              <%= form.password_field :password_confirmation ,class:"form-control" %>
            </div>         
            
            <div class="actions col-6">
              <%= form.submit "Salvar", class:"btn btn-success min-width-btn", id:"cadastrar_form_botao_salvar" %>
              <%= link_to 'Voltar', usuarios_path, class:"btn btn-light min-width-btn" %>
            </div>  
          <% end %>
        <br>
        <hr>
        <br>
        <div class="actions col-6">
          <a href="/entrar"><h6>Já tenho conta, quero realizar o login</h6></a>
        </div> 
    </div>
</body>
<%= render '/layouts/footer' %>