<%= render '/layouts/info' %>
<%= render '/layouts/header' %>
<div>
  <h1 class="text-center mt-4">Avaliações</h1>
  <br><br>
  <div >
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="avaliacaoTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="todas-tab" data-toggle="tab" role="tab" aria-controls="todas" aria-selected="true">Todas</a>
      </li>
    </ul>

    <!-- Tab panes href="#home" -->
    <div class="tab-content">
      <div class="tab-pane active" id="todas" role="tabpanel" aria-labelledby="todas-tab">
          <table class="table table-bordered table-hover">
              <thead>
                  <tr>
                      <td class="text-center"><b>Nome</b></td>
                      <td class="text-center"><b>Tipo</b></td>
                      <td colspan="2" class="text-center"><b>Descrição</b></td>      
                      <td class="text-center"><b>Avaliação</b></td>                         
                      <td colspan="2" class="text-center"><b>Data</b></td>    
                  </tr>
              </thead>
              <tbody>
                <% Feedback.all.each do |feedback| %>
                  <tr>
                      <td class="text-center">
                        <div class="form-group">
                          <% if feedback.nome.empty? %>
                            Anônimo
                          <% else %>
                            <%= feedback.nome %>
                           <% end %>
                        </div>        
                      </td>
                      <td class="text-center">
                        <div class="form-group">
                               <%= feedback.tipo %>
                        </div> 
                      </td>
                      <td colspan="2" class="text-center">
                        <div class="form-group">
                             <%= feedback.descricao %>
                        </div> 
                      </td>    
                      <td class="text-center">
                        <div class="form-group">
                          <% if feedback.curtiu == nil %>
                            Curtiu: 0
                          <% else %>
                            Curtiu: <%= feedback.curtiu %>
                           <% end %>                              
                        </div> 
                      </td>
                      <td colspan="2" class="text-center">
                        <div class="form-group">
                             <%= feedback.created_at %>
                        </div> 
                      </td> 
                       <td>
                          <%= button_to "Curtir", feedback, method: :curtir, class:"btn btn-success min-width-btn", data: {confirm: "Tem certeza que deseja curtir este feedback? #{feedback.tipo}"} %>
                       </td>                                           
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>  
<%= render '/layouts/footer' %>